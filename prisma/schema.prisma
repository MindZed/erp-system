// mindzed/erp-system/erp/prisma/schema.prisma

// --- CONFIGURATION ---

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ----------------------------------------------------
// 1. AUTHENTICATION & USER MANAGEMENT MODELS
// ----------------------------------------------------

// User model (System employees/team members)
model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime? @map("emailVerified")
  image          String?
  hashedPassword String? // For credentials login
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Permissions (from previous steps)
  role UserRole @default(EMPLOYEE)

  // Auth Relations (required by adapter)
  accounts Account[]
  sessions Session[]

  // New: Project/Task Relations
  managedProjects Project[] @relation("ManagedProjects")
  createdProjects Project[] @relation("CreatedProjects")
  assignedTasks   Task[]    @relation("AssignedTasks")
  createdTasks    Task[]    @relation("CreatedTasks")

  // Subtask relations for tracking
  createdSubtasks    Subtask[] @relation("CreatedSubtasks")
  assignedSubtasks   Subtask[] @relation("AssignedSubtasks")
  assignedBySubtasks Subtask[] @relation("AssignedBySubtasks")
}

enum UserRole {
  ADMIN
  MANAGER
  EMPLOYEE
}

// --- CLIENT MODEL ---
model Client {
  id           String       @id @default(cuid())
  name         String       @unique
  contactEmail String?
  phone        String?
  status       ClientStatus @default(ACTIVE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // New: Project Relations
  projects Project[]
}

enum ClientStatus {
  ACTIVE
  ON_HOLD
  INACTIVE
}

// --- END CLIENT MODEL ---

// ----------------------------------------------------
// 2. PROJECT AND TASK MANAGEMENT MODELS (New Section)
// ----------------------------------------------------

model Project {
  id          String  @id @default(cuid())
  name        String  @unique
  description String?

  // New Fields based on requirements (Progress, Status Reason, Priority)
  progress     Int           @default(0) // Percentage 0-100
  status       ProjectStatus @default(PENDING)
  statusReason String?       @map("status_reason")
  priority     Priority      @default(MEDIUM)

  // Dates
  startDate DateTime? @map("start_date") @db.Date
  endDate   DateTime? @map("end_date") @db.Date

  // Relations
  clientId String
  client   Client @relation(fields: [clientId], references: [id])

  managerId String
  manager   User   @relation("ManagedProjects", fields: [managerId], references: [id])

  // Created By (Required for all Projects)
  createdById String @map("created_by_id")
  createdBy   User   @relation("CreatedProjects", fields: [createdById], references: [id])

  tasks Task[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdById]) // Index for createdBy to facilitate lookups
  @@map("Project")
}

// Statuses based on your explicit list (plus PENDING as a start state)
enum ProjectStatus {
  PENDING
  COMPLETED
  ACTIVE
  ON_HOLD
  DELAYED
  CANCELLED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model Task {
  id          String  @id @default(cuid())
  name        String
  description String?

  // Status and Reason
  status       TaskStatus @default(PENDING)
  statusReason String?    @map("status_reason")

  // Dates
  startDate DateTime? @map("start_date") @db.Date
  endDate   DateTime? @map("end_date") @db.Date

  // Relations
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  assignedToId String? @map("assigned_to_id")
  assignedTo   User?   @relation("AssignedTasks", fields: [assignedToId], references: [id])

  // Created By (Optional for Tasks, as creation might be complex)
  createdById String? @map("created_by_id")
  createdBy   User?   @relation("CreatedTasks", fields: [createdById], references: [id])

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  subtasks  Subtask[] // relation to Subtask

  @@index([assignedToId])
  @@index([createdById])
  @@map("Task")
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  ON_HOLD
}

model Subtask {
  id           String     @id @default(cuid())
  name         String     @db.VarChar(255)
  description  String?
  startDate    DateTime?  @map("start_date") @db.Date
  endDate      DateTime?  @map("end_date") @db.Date
  status       TaskStatus @default(PENDING)
  statusReason String?

  // Relations
  taskId String @map("task_id")
  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)

  // Tracking fields
  createdById String @map("created_by_id")
  createdBy   User   @relation("CreatedSubtasks", fields: [createdById], references: [id], onDelete: Restrict)

  assignedToId String @map("assigned_to_id")
  assignedTo   User   @relation("AssignedSubtasks", fields: [assignedToId], references: [id], onDelete: Restrict)

  assignedById String? @map("assigned_by_id")
  assignedBy   User?   @relation("AssignedBySubtasks", fields: [assignedById], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdById])
  @@index([assignedToId])
  @@index([taskId])
  @@map("Subtask")
}

// --- NextAuth Required Adapter Models (No changes) ---
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String  @map("providerAccountId")
  refresh_token     String?
  access_token      String?
  expires_at        Int?    @map("expires_at")
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("Account")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("sessionToken")
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("Session")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("VerificationToken")
}
